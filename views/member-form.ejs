<%- include('layouts/header'); -%>
<div class="container">
  <h1 class="content-indent"><%= title %></h1>
  <form action='<%= action %>' method='post'>
    <div class='form-row'>
      <div class='form-group col-md-2'>
        <label for='member[id]'>Registration id</label>
        <% if (member.id) { %>
        <input type="hidden" name="member[old_id]" value="<%= member.id %>">
        <% } %>
        <input type='text' class='form-control' name='member[id]' id='member[id]' placeholder='PL001'
          value="<%= (member.id) ? member.id.toUpperCase() : '' %>" required>
      </div>
      <div class='form-group col-md-6'>
        <label for='member[name]'>Name</label>
        <input type='text' class='form-control' id='member[name]' name='member[name]'
          value="<%= (member.name) ? member.name : '' %>" required>
      </div>
      <div class='form-group col-md-4'>
        <label for='member[birthday]'>Birthday</label>
        <input class='form-control' type='date' id='member[birthday]' name='member[birthday]'
          value="<%= (member.birthday) ? member.birthday : '' %>" required>
      </div>
    </div>
    <div class='form-row'>
      <div class='form-group col-md-3'>
        <label for='member[pСode]'>Post code</label>
        <input type='text' class='form-control' id='member[pСode]' name='member[pСode]'
          value="<%= (member.pСode) ? member.pСode : '' %>">
      </div>
      <div class='form-group col-md-9'>
        <label for='member[address]'>Address</label>
        <input type='text' class='form-control' id='member[address]' name='member[address]'
          value="<%= (member.address) ? member.address : '' %>">
      </div>
    </div>
    <div class='form-row'>
      <div class='form-group col-md-6'>
        <label for='member[phone]'>Phone</label>
        <input type='text' class='form-control' id='member[phone]' name='member[phone]'
          value="<%= (member.phone) ? member.phone : '' %>">
      </div>
      <div class='form-group col-md-6'>
        <label for='member[mail]'>E-mail</label>
        <input type='text' class='form-control' id='member[mail]' name='member[mail]'
          value="<%= (member.mail) ? member.mail : '' %>">
      </div>
    </div>
    </br>

    <div class='form-row'>
      <div class='form-group col-md-2'>
        <label for="member[psht]">Joined in PSHT?</label>
        <input class='form-control' type='date' id='member[psht]' name='member[psht]'
          value="<%= (member.psht) ? member.psht : '' %>">
      </div>
    </div>
    </br>

    <div class='form-row'>
      <div class='form-group col-md-2'>
        <a href="/" class="btn btn-light active" role="button">Cancel</a>
        <button type='submit' class='btn btn-success'><svg class="bi bi-check" width="1em" height="1em"
            viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
              d="M13.854 3.646a.5.5 0 010 .708l-7 7a.5.5 0 01-.708 0l-3.5-3.5a.5.5 0 11.708-.708L6.5 10.293l6.646-6.647a.5.5 0 01.708 0z"
              clip-rule="evenodd" />
          </svg> Save</button>
      </div>
    </div>
  </form>
</div>
<%- include('layouts/footer'); -%>